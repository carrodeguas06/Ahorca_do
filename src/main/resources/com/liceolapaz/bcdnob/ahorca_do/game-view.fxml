<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liceolapaz.bcdnob.ahorca_do.controllers.GameController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-color: #dcdcdc; -fx-border-width: 0 0 1 0;">
            <children>
                <Label text="Jugador:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lblNombreJugador" text="Usuario" textFill="#2c3e50">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Separator orientation="VERTICAL" />
                <Label text="Intentos restantes:" />
                <Label fx:id="lblIntentos" text="6" textFill="#ad3ce5">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="ADIVINA LA PALABRA" textFill="#95a5a6">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label fx:id="lblPalabraOculta" text="_ _ _ _ _ _" textAlignment="CENTER">
                    <font>
                        <Font name="Monospaced Bold" size="64.0" />
                    </font>
                </Label>

                <Label fx:id="lblMensaje" text="Introduce una letra para empezar" textFill="#7f8c8d">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>

    <right>
        <VBox prefWidth="180.0" spacing="10.0" style="-fx-background-color: #fff0f0; -fx-border-color: rgba(168,85,186,0.51); -fx-border-width: 2; -fx-padding: 15; -fx-background-radius: 5; -fx-border-radius: 5;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="FALLOS" textFill="#c0392b" underline="true">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />

                <TextFlow fx:id="flowFallos" lineSpacing="10.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" textAlignment="CENTER" />
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #bdc3c7;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Tu letra:">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="txtLetra" alignment="CENTER" prefWidth="60.0" promptText="A">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </TextField>
                <Button fx:id="btnEnviar" defaultButton="true" mnemonicParsing="false" onAction="#onEnviarLetra" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="ENVIAR">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Separator orientation="VERTICAL" />

                <Button mnemonicParsing="false" onAction="#onVerPuntuacion" prefHeight="30.0" text="PuntuaciÃ³n" />
                <Button mnemonicParsing="false" onAction="#onCancelar" prefHeight="30.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Abandonar" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
