<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="15.0" styleClass="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liceolapaz.bcdnob.ahorca_do.controllers.RegisterController">
    <children>
        <Label text="Crear Cuenta">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <VBox maxWidth="300.0" spacing="5.0">
            <children>
                <Label text="Nombre:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtNombre" promptText="Tu nombre real" />
            </children>
        </VBox>

        <VBox maxWidth="300.0" spacing="5.0">
            <children>
                <Label text="Apellido:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtApellido" promptText="Tu primer apellido" />
            </children>
        </VBox>

        <VBox maxWidth="300.0" spacing="5.0">
            <children>
                <Label text="Usuario (Nickname):">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="txtNickname" promptText="Cómo te verán en el juego" />
            </children>
        </VBox>

        <VBox maxWidth="300.0" spacing="5.0">
            <children>
                <Label text="Contraseña:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="txtPassword" promptText="********" />
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onRegistrar" prefHeight="35.0" prefWidth="300.0" text="REGISTRARSE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button cancelButton="true" mnemonicParsing="false" onAction="#onVolver" prefWidth="300.0" text="Volver al Login" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>